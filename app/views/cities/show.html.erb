<div>
  <div>
    <h1>
      City #<%= @the_city.id %> details
    </h1>

    <div>
      <div>
        <a href="/cities">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_city/<%= @the_city.id %>">
          Delete city
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_city.name %>
      </dd>

      <dt>
        State short
      </dt>
      <dd>
        <%= @the_city.state_short %>
      </dd>

      <dt>
        State full
      </dt>
      <dd>
        <%= @the_city.state_full %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_city.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_city.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit city
    </h2>

    <form action="/modify_city/<%= @the_city.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_city.name %>">
      </div>

      <div>
        <label for="state_short_box">
          State short
        </label>

        <input type="text" id="state_short_box" name="query_state_short" value="<%= @the_city.state_short %>">
      </div>

      <div>
        <label for="state_full_box">
          State full
        </label>

        <input type="text" id="state_full_box" name="query_state_full" value="<%= @the_city.state_full %>">
      </div>

      <button>
        Update city
      </button>
    </form>
  </div>
</div>

<hr>
